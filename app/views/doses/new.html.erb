<div class="container">
  <h3>Add an ingredient</h3>
  <br>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.button :submit, class: 'btn btn-primary w-100' %>
  <% end %>
</div>

<div class="container">
  <br>
  <%= link_to 'See all cocktails', cocktails_path %>
</div>
