<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h3>Ingredients</h3>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %>
    : <%= dose.description %>
    <%= link_to 'Delete', dose_path(dose), method: :delete %> </li>
    <% end %>
    <br>
    <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
</div>

<div class="container">
  <br>
  <%= link_to 'See all cocktails', cocktails_path %>
</div>

