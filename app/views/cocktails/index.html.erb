<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514933651103-005eec06c04b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1867&q=80);">
  <div class="container">
    <h1>All cocktails</h1>
      <% @cocktails.each do |cocktail| %>
        <div class="cards">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)" >
            <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>

          </div>
        </div>
      <% end %>
    <%= link_to "Create new cocktail", new_cocktail_path, class: 'btn btn-primary' %>
  </div>
</div>



